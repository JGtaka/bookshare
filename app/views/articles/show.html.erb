<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <article class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-9">
              <h3 style="display: inline;"><%= @article.title %></h3>
              <ul class="list-inline">
                <li class="list-inline-item"><%= l @article.created_at, format: :long %></li>
              </ul>
              <div class='d-flex justify-content-end'>
                <%= link_to "#", id: "button-edit-#{@article.id}" do %>
                  <i class='bi bi-pencil-fill'></i>
                <% end %>
                <%= link_to "#", id: "button-delete-#{@article.id}", class: "ms-2" do %>
                  <i class="bi bi-trash-fill"></i>
                <% end %>
              </div>
              </div>
            </div>
            <p><%= simple_format(@article.body) %></p>
            <p><%= simple_format(@article.curriculum) %></p>
          </div>
        </article>
      </div>
    </div>
    </div>
  </div>
</div>

<%= link_to '記事一覧', articles_path %>